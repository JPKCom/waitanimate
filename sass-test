$kfanim: (
  0: (
    "transform": "scale(1)",
    "background-color": "blue"
  ),
  50: (
    "transform": "scale(1)",
    "background-color": "green"
  ),
  100: (
    "transform": "scale(1)",
    "background-color": "red"
  )
);

@mixin wa($name, $waitTime:1) {
  $counter: 1;
  $length: length($kfanim);
  @keyframes name {
    @each $frame, $prop in $kfanim {

      test-#{$counter} {
        color: white;
      }

      // @if $waitTime > 1 {
      //   #{$i}% {
      //     transform: scale(1);
      //     background-color: red;
      //   }
      // }

      $percent: 0;

      @if $waitTime == 0 {
        $percent: $frame;
      } @else {
        $percent: $frame/$waitTime;
      }


      #{$percent}% {
        @each $k, $v in $prop {
          #{$k}: #{$v}
        }
      }

      $counter: $counter+1;
    }

  }
}

@include wa(name, 0.5);
