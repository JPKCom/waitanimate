$kfanim: (
  0: (
    "transform": "scale(1)",
    "background-color": "blue"
  ),
  50: (
    "transform": "scale(2)",
    "background-color": "green"
  ),
  100: (
    "transform": "scale(3)",
    "background-color": "red"
  )
);



@mixin wa($name, $kf, $duration:1, $waitTime:1) {
  $counter: 1;
  $length: length($kf);
  @keyframes name {
    @each $frame, $prop in $kf {

      #{$frame * $duration / ($duration + $waitTime)}% {
        @each $k, $v in $prop {
          #{$k}: #{$v}
        }
      }

      @if $counter == $length and $waitTime > 0 {
        100% {
          @each $k, $v in $prop {
            #{$k}: #{$v}
          }
        }
      }

      $counter: $counter+1;
    }

  }
}

@include wa(name, $kfanim, 1, 1);
